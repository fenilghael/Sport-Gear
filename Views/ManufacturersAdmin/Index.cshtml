@model IEnumerable<SportsGearCMS.Models.Manufacturer>
<h1>Manufacturers</h1>
<p><a asp-action="Create" class="btn btn-primary">Add New Manufacturer</a></p>
<table class="table">
    <thead>
        <tr><th>Name</th><th>Email</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.ContactEmail</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@m.ManufacturerId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@m.ManufacturerId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@m.ManufacturerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
