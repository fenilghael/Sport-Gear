@model SportsGearCMS.Models.GearItem

@{
    ViewData["Title"] = "Gear Item Details";
}

<h1>Gear Item Details</h1>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Quantity in Stock</dt>
    <dd class="col-sm-10">@Model.QuantityInStock</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.GearItemId" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
