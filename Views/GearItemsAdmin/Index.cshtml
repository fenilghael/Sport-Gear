@model IEnumerable<SportsGearCMS.Models.GearItem>

@{
    ViewData["Title"] = "Gear Items";
}

<h1>Gear Items</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Gear Item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.QuantityInStock</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GearItemId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GearItemId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GearItemId">Delete</a> |
                    <a asp-action="AssignCategories" asp-route-id="@item.GearItemId">Categories</a> |
                    <a asp-action="AssignManufacturers" asp-route-id="@item.GearItemId">Manufacturers</a>
                </td>
            </tr>
        }
    </tbody>
</table>
