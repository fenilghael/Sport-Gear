@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sports Gear CMS</title>

    <!-- ✅ Bootstrap 5 CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- ✅ Bootstrap Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-4 shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="GearItemsAdmin" asp-action="Index">Sports Gear CMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="GearItemsAdmin" asp-action="Index">Gear Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CategoriesAdmin" asp-action="Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ManufacturersAdmin" asp-action="Index">Manufacturers</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer class="border-top mt-4 text-muted text-center py-3">
        &copy; @DateTime.Now.Year - Sports Gear CMS
    </footer>

    <!-- ✅ Bootstrap JS (for navbar toggle) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
